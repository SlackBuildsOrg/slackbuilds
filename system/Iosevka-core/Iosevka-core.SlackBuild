cd "$(dirname "$0")" || exit 1
CWD=$(pwd)

PRGNAM=Iosevka-core
VERSION=${VERSION:-33.3.6}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}
PKGTYPE=${PKGTYPE:-tgz}

ARCH=noarch

# If PRINT_PACKAGE_NAME is set, print the resulting package name and exit.
if [ -n "$PRINT_PACKAGE_NAME" ]; then
  echo "$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE"
  exit 0
fi

TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

set -e

rm -rf "$PKG"
mkdir -p "$TMP" "$PKG" "$OUTPUT"
cd "$TMP"

rm -rf "Iosevka-$VERSION"
unzip -o "$CWD/PkgTTC-Iosevka-$VERSION.zip" -d "$TMP/Iosevka-$VERSION"
cd "Iosevka-$VERSION"

chown -R root:root .
find . -type d -exec chmod 755 {} \;
find . -type f -exec chmod 644 {} \;

mkdir -p "$PKG/usr/share/fonts/TTF"
install -m 644 \
  Iosevka-Regular.ttc \
  Iosevka-Bold.ttc \
  "$PKG/usr/share/fonts/TTF"

mkdir -p "$PKG/usr/doc/$PRGNAM-$VERSION"
install -m 644 "$CWD/LICENSE.md" "$PKG/usr/doc/$PRGNAM-$VERSION/"
install -m 644 "$CWD/README" "$PKG/usr/doc/$PRGNAM-$VERSION/"
install -m 644 "$CWD/README.SLACKWARE" "$PKG/usr/doc/$PRGNAM-$VERSION/"
install -m 644 "$CWD/$PRGNAM.SlackBuild" "$PKG/usr/doc/$PRGNAM-$VERSION/"

mkdir -p "$PKG/install"
install -m 644 "$CWD/slack-desc" "$PKG/install/"
install -m 644 "$CWD/doinst.sh" "$PKG/install/"

cd "$PKG"
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE

