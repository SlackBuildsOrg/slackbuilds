cd $(dirname $0) ; CWD=$(pwd)

PRGNAM=s
VERSION=${VERSION:-0.7.1}
SRCNAM32="s-linux_386"
SRCNAM64="s-linux_amd64"
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}
PKGTYPE=${PKGTYPE:-tgz}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i586 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

if [ ! -z "${PRINT_PACKAGE_NAME}" ]; then
  echo "$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE"
  exit 0
fi

TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}


case "$ARCH" in
    i586|i686) SRCNAM="$SRCNAM32" ;;
    x86_64) SRCNAM="$SRCNAM64" ;;
    *) echo "$ARCH is unsupported arch. Exiting..."; exit 1 ;;
esac


set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $SRCNAM-$VERSION
unzip $CWD/$SRCNAM.zip
cd $SRCNAM

mkdir -p "$PKG"/usr/bin
cp s "$PKG"/usr/bin/
chmod +x "$PKG"/usr/bin/s

find "$PKG"/usr/bin -type f -exec strip {} +

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a \
  LICENSE README* \
  $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE
