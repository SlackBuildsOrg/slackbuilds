if [ "$1" = "" ]; then
    echo
    echo "Usage:"
    echo
    echo "   x48ng-config <rom>"
    echo
    echo " where <rom> is one of:"
    echo "     gxrom-l"
    echo "     gxrom-m"
    echo "     gxrom-p"
    echo "     gxrom-r  <--  default rom"
    echo "     sxrom-a"
    echo "     sxrom-b"
    echo "     sxrom-c"
    echo "     sxrom-d"
    echo "     sxrom-e"
    echo "     sxrom-j"
    echo

else
    ROMs="gxrom-l gxrom-m gxrom-p gxrom-r sxrom-a sxrom-b sxrom-c sxrom-d sxrom-e sxrom-j"
    DEST="$HOME/.config/x48ng"
    SUCCESS=0

    mkdir -p $DEST
    x48ng --print-config >> $DEST/config.lua

    for rom in $ROMs
    do
        if [ "$rom" = "$1" ]; then
            cat /usr/share/x48ng/ROMs/$rom.zip | funzip > "$DEST/rom"
            SUCCESS=1
        fi
    done
    if [ "$SUCCESS" = "1" ]; then
        echo "x48ng ROM $rom configured."
    else
        echo "error: x48ng ROM $1 not found."
    fi
fi
