DEST="$HOME/.wine/drive_c/Program Files/HP/HP Prime Virtual Calculator"

if [ ! -d "$DEST" ]
then
    notify-send -t 20000 "Setting hp-prime for first run. If prompted DO NOT accept the UPGRADE to newer versions inside the app. It will break the program."
    wine /usr/src/hp-prime/$(ls -1 /usr/src/hp-prime) /quiet
    rm -rf "$HOME/.local/share/applications/wine/Programs/HP Calculators/HP Prime Virtual Calculator.desktop"
fi
wine "$DEST/HPPrime.exe"
